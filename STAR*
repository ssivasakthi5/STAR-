package day4;

import java.util.Scanner;

public class star {
public static void main(String args[]) {
	Scanner s=new Scanner(System.in);
	int n=s.nextInt();
	for(int i=0;i<n;i++) {
		for(int k=n-i;k>=0;k--) {
			System.out.print(" ");
		}
		for(int j=0;j<=i;j++){
			System.out.print(" *");
		}System.out.println();
	}
}
}
